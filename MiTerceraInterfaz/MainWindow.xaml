<Window x:Class="MiTerceraInterfaz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiTerceraInterfaz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Semaforo" FontSize="45" TextAlignment="Center" Foreground="Black" FontWeight="Heavy"></TextBlock>
        </StackPanel>



        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width ="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width ="0.5*"></ColumnDefinition>

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <RadioButton Margin="50,20,100,80" Click="RadioButton_Click" >
                        <TextBlock Text="Rojo"></TextBlock>
                    </RadioButton>
                    <RadioButton Margin="50,20,100,80"  Click="RadioButton_Click_1">
                        <TextBlock Text="Amarillo"></TextBlock>
                    </RadioButton>
                    <RadioButton Margin="50,20,100,80"  Click="RadioButton_Click_2">
                        <TextBlock Text="Verde"></TextBlock>
                    </RadioButton>
                </StackPanel>

                <Grid Grid.Column="1">
                    <Image Source="C:\Users\goeth\source\repos\CSharp-Fundamentals\MiTerceraInterfaz\semaforo2.png" Height="280" Width="320"/>
                    <Ellipse Fill="Red" Margin="185,71,148,214" Name ="eRojo" Visibility="Hidden" />
                    <Ellipse Fill="Yellow" Margin="185,144,153,144" Name="eAmarillo" Visibility="Hidden" />
                    <Ellipse Fill="Green" Margin="185,213,148,75" Name ="eVerde" Visibility="Hidden" />
                </Grid>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
